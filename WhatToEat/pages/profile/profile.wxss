/* 个人中心页样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: var(--spacing-lg) var(--spacing-md);
  margin-bottom: var(--spacing-md);
  transition: all 0.3s ease;
  animation: fadeInDown 0.5s ease;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-card:active {
  opacity: 0.9;
}

.user-avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  margin-right: var(--spacing-md);
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  transition: transform 0.3s ease;
}

.user-avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.avatar-placeholder-icon {
  font-size: 60rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-card:active .user-avatar {
  transform: scale(1.05);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: #ffffff;
  margin-bottom: var(--spacing-xs);
}

.user-desc {
  font-size: var(--font-size-sm);
  color: rgba(255, 255, 255, 0.8);
}

.user-action {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon {
  font-size: 32rpx;
  color: #ffffff;
}

/* 功能菜单 */
.menu-section {
  background-color: var(--bg-white);
  margin-bottom: var(--spacing-md);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
  animation: slideInRight 0.5s ease;
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.menu-item:active {
  background-color: var(--bg-gray);
  transform: translateX(-10rpx);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: var(--spacing-md);
}

.menu-text {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.menu-badge {
  padding: 4rpx 12rpx;
  background-color: var(--error-color);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: var(--font-size-xs);
  margin-right: var(--spacing-sm);
}

.menu-arrow {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

/* 退出登录 */
.logout-section {
  padding: var(--spacing-md);
}

.logout-btn {
  width: 100%;
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 昵称编辑弹窗 */
.nickname-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.nickname-modal-content {
  width: 600rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.nickname-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg) var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.nickname-modal-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.nickname-modal-close {
  font-size: 48rpx;
  color: var(--text-tertiary);
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nickname-modal-close:active {
  opacity: 0.6;
}

.nickname-modal-body {
  padding: var(--spacing-lg) var(--spacing-md);
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  padding: 0 var(--spacing-sm);
  font-size: var(--font-size-md);
  color: var(--text-primary);
  background-color: var(--bg-white);
  border-radius: 8rpx;
  border: 1rpx solid var(--border-color);
  box-sizing: border-box;
  line-height: 80rpx;
  display: block;
}

.nickname-input-placeholder {
  color: #999999;
  font-size: var(--font-size-md);
}

.nickname-tip {
  margin-top: var(--spacing-sm);
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  text-align: right;
}

.nickname-modal-footer {
  display: flex;
  border-top: 1rpx solid var(--border-color);
}

.nickname-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: var(--font-size-md);
  border: none;
  border-radius: 0;
  background-color: transparent;
}

.nickname-btn::after {
  border: none;
}

.nickname-btn-cancel {
  color: var(--text-secondary);
  border-right: 1rpx solid var(--border-color);
}

.nickname-btn-cancel:active {
  background-color: var(--bg-gray);
}

.nickname-btn-confirm {
  color: #07c160;
  font-weight: bold;
}

.nickname-btn-confirm:active {
  background-color: rgba(7, 193, 96, 0.1);
}
