/* 食谱详情页样式 */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background-color: var(--bg-color);
}

/* 头部区域 */
.header-section {
  background-color: var(--bg-white);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.recipe-title {
  font-size: var(--font-size-xl);
  font-weight: bold;
  color: var(--text-primary);
  display: block;
  margin-bottom: var(--spacing-sm);
}

.recipe-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.recipe-tag {
  font-size: var(--font-size-xs);
  padding: 4rpx 12rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 12rpx;
}

.recipe-time {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
}

/* 图片区域 */
.images-section {
  background-color: var(--bg-white);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.images-scroll {
  white-space: nowrap;
}

.images-list {
  display: inline-flex;
  gap: var(--spacing-sm);
}

.recipe-image {
  width: 600rpx;
  height: 400rpx;
  border-radius: var(--border-radius);
  flex-shrink: 0;
}

/* 内容区域 */
.content-section {
  background-color: var(--bg-white);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.recipe-content {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  line-height: 1.8;
  display: block;
}

/* 操作栏 */
.actions-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-white);
  border-top: 1rpx solid var(--border-color);
  padding: var(--spacing-md);
  display: flex;
  gap: var(--spacing-md);
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  border-radius: var(--border-radius);
  background-color: var(--bg-gray);
}

.action-btn:active {
  background-color: var(--primary-color);
}

.action-btn:active .action-icon,
.action-btn:active .action-text {
  color: #ffffff;
}

.action-icon {
  font-size: 48rpx;
}

.action-icon.liked,
.action-icon.collected {
  opacity: 1;
}

.action-text {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.delete-btn {
  background-color: #ffebee;
}

.delete-btn:active {
  background-color: #f44336;
}

.delete-btn:active .action-icon,
.delete-btn:active .action-text {
  color: #ffffff;
}

/* 加载和错误状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.recipe-container {
  min-height: 100vh;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: var(--spacing-lg);
}

.error-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
}

.retry-btn {
  padding: var(--spacing-md) var(--spacing-lg);
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: var(--border-radius);
  font-size: var(--font-size-md);
}
