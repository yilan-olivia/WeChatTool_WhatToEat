/* 社区主页样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

.scroll-view {
  height: 100vh;
}

/* 热门食谱区域 */
.hot-section {
  background-color: var(--bg-white);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.hot-scroll {
  white-space: nowrap;
}

.hot-list {
  display: inline-flex;
  gap: var(--spacing-md);
}

.hot-item {
  display: inline-block;
  width: 280rpx;
  background-color: var(--bg-gray);
  border-radius: var(--border-radius);
  overflow: hidden;
  flex-shrink: 0;
}

.hot-image {
  width: 100%;
  height: 200rpx;
}

.hot-info {
  padding: var(--spacing-sm);
}

.hot-title {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: var(--spacing-xs);
}

.hot-stats {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.hot-like {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

/* 所有食谱列表 */
.recipes-section {
  padding: var(--spacing-md);
}

.recipes-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.recipe-item {
  display: flex;
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  overflow: hidden;
  padding: var(--spacing-md);
  gap: var(--spacing-md);
}

.recipe-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--border-radius);
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recipe-header {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.recipe-title {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--text-primary);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-tags {
  display: flex;
  gap: var(--spacing-xs);
}

.recipe-tag {
  font-size: var(--font-size-xs);
  padding: 4rpx 12rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 12rpx;
}

.recipe-stats {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-top: var(--spacing-sm);
}

.recipe-stat {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.recipe-time {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-left: auto;
}

.load-more {
  text-align: center;
  padding: var(--spacing-md);
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}


/* 悬浮发布按钮 */
.fab {
  position: fixed;
  right: var(--spacing-md);
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.3);
}

.fab-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}
