/* 食谱收藏页样式 */
.container {
  min-height: 100vh;
  padding: var(--spacing-md);
  background-color: var(--bg-color);
}

.recipes-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.recipe-item {
  display: flex;
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  overflow: hidden;
  padding: var(--spacing-md);
  gap: var(--spacing-md);
}

.recipe-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--border-radius);
  flex-shrink: 0;
}

.recipe-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recipe-header {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.recipe-title {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--text-primary);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-tags {
  display: flex;
  gap: var(--spacing-xs);
}

.recipe-tag {
  font-size: var(--font-size-xs);
  padding: 4rpx 12rpx;
  background-color: var(--primary-color);
  color: #ffffff;
  border-radius: 12rpx;
}

.recipe-stats {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-top: var(--spacing-sm);
}

.recipe-stat {
  font-size: var(--font-size-xs);
  color: var(--text-secondary);
}

.recipe-time {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-left: auto;
}
