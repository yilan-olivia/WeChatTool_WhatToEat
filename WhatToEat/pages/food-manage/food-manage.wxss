/* 菜品管理页样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--bg-white);
  gap: var(--spacing-sm);
}

.search-input {
  flex: 1;
  height: 64rpx;
  background-color: var(--bg-gray);
  border-radius: 32rpx;
  padding: 0 var(--spacing-md);
  font-size: var(--font-size-md);
}

.search-btn {
  padding: var(--spacing-xs) var(--spacing-md);
  color: var(--primary-color);
  font-size: var(--font-size-md);
}

/* 分类筛选 */
.category-scroll {
  white-space: nowrap;
  background-color: var(--bg-white);
  border-bottom: 1rpx solid var(--border-color);
}

.category-list {
  display: inline-flex;
  padding: var(--spacing-sm) var(--spacing-md);
  gap: var(--spacing-sm);
}

.category-item {
  display: inline-block;
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: 32rpx;
  background-color: var(--bg-gray);
  color: var(--text-secondary);
  font-size: var(--font-size-sm);
  white-space: nowrap;
  transition: all 0.3s ease;
}

.category-item:active {
  transform: scale(0.95);
}

.category-item.active {
  background-color: var(--primary-color);
  color: #ffffff;
  font-weight: 500;
}

/* 菜品列表 */
.foods-scroll {
  flex: 1;
  height: 0;
}

.foods-list {
  padding: var(--spacing-sm) var(--spacing-md);
}


/* 悬浮添加按钮 */
.fab {
  position: fixed;
  bottom: 80rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.fab-icon {
  font-size: 48rpx;
  color: white;
  font-weight: bold;
}

/* 加载组件样式 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
}
