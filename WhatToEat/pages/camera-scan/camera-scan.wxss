/* 拍照识别页样式 */
.container {
  min-height: 100vh;
  padding: var(--spacing-md);
  background-color: var(--bg-color);
}

/* 相机预览区域 */
.camera-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
  overflow: hidden;
}

.camera {
  width: 100%;
  height: 100%;
}

.camera-guide {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  pointer-events: none;
}

.camera-frame {
  width: 300rpx;
  height: 300rpx;
  border: 2rpx solid #ffffff;
  border-radius: var(--border-radius);
  box-shadow: 0 0 0 9999rpx rgba(0, 0, 0, 0.5);
  margin-bottom: var(--spacing-md);
}

.camera-tip {
  color: #ffffff;
  font-size: var(--font-size-md);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

/* 预览区域 */
.preview-section {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
  overflow: hidden;
}

.preview-wrapper {
  position: relative;
  width: 100%;
  height: 500rpx;
  border-radius: var(--border-radius, 8rpx);
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.preview-wrapper:active .preview-image {
  transform: scale(1.05);
}

.preview-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.preview-wrapper:active .preview-mask {
  opacity: 1;
}

.mask-text {
  color: #ffffff;
  font-size: var(--font-size-md);
}

/* 识别结果 */
.result-section {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.result-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.result-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.result-item {
  display: flex;
  align-items: center;
}

.result-label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-right: var(--spacing-sm);
}

.result-value {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: bold;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.action-section .btn {
  flex: 1;
  transition: all 0.3s ease;
}

.action-section .btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 表单区域 */
.form-section {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
}

.form-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.form-item {
  margin-bottom: var(--spacing-md);
}

.form-label {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 var(--spacing-md);
  background-color: var(--bg-gray);
  border-radius: var(--border-radius);
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: var(--spacing-sm) var(--spacing-md);
  background-color: var(--bg-gray);
  border-radius: var(--border-radius);
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.save-btn {
  width: 100%;
  margin-top: var(--spacing-md);
}