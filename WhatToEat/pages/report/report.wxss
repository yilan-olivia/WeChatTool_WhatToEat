/* 健康报告页样式 */
.container {
  min-height: 100vh;
  padding: var(--spacing-md);
  background-color: var(--bg-color);
}

/* 时间选择器 */
.time-selector {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.date-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-label {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-xs);
}

.date-value {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.date-separator {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.query-btn {
  padding: var(--spacing-xs) var(--spacing-md);
  font-size: var(--font-size-sm);
  transition: all 0.3s ease;
}

.query-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 统计概览 */
.stats-overview {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.overview-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  background-color: var(--bg-gray);
  border-radius: var(--border-radius);
  transition: all 0.3s ease;
  animation: fadeInUp 0.5s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-box:active {
  transform: scale(0.95);
  background-color: var(--primary-color);
}

.stat-box:active .stat-value,
.stat-box:active .stat-label {
  color: #ffffff;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
  transition: color 0.3s ease;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  transition: color 0.3s ease;
}

/* 分类统计 */
.category-stats {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.category-stat-item {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-name {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.category-count {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.category-bar {
  height: 8rpx;
  background-color: var(--bg-gray);
  border-radius: 4rpx;
  overflow: hidden;
}

.category-progress {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 健康建议 */
.health-tips {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-sm);
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  line-height: 1.6;
}

/* 卡路里统计 */
.calories-section {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  animation: fadeIn 0.5s ease;
}

.calories-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: var(--border-radius);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  color: #ffffff;
}

.calories-header {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: var(--spacing-xs);
}

.calories-label {
  font-size: var(--font-size-md);
  opacity: 0.9;
}

.calories-value {
  font-size: 64rpx;
  font-weight: bold;
}

.calories-unit {
  font-size: var(--font-size-md);
  opacity: 0.9;
}

.daily-calories {
  margin-top: var(--spacing-md);
}

.daily-title {
  font-size: var(--font-size-md);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.daily-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.daily-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.daily-date {
  width: 140rpx;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  flex-shrink: 0;
}

.daily-bar-wrapper {
  flex: 1;
  height: 24rpx;
  background-color: var(--bg-gray);
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.daily-bar {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.daily-value {
  width: 100rpx;
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  text-align: right;
  flex-shrink: 0;
}

/* 营养均衡情况 */
.nutrition-balance-section {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  animation: fadeIn 0.5s ease;
}

.balance-score-card {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
  color: #ffffff;
}

.score-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.score-label {
  font-size: var(--font-size-xs);
  opacity: 0.9;
  margin-top: 4rpx;
}

.score-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.score-level {
  font-size: var(--font-size-lg);
  font-weight: bold;
}

.score-desc {
  font-size: var(--font-size-sm);
  opacity: 0.9;
}

.nutrition-items {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.nutrition-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nutrition-name {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: 500;
}

.nutrition-status {
  font-size: var(--font-size-xs);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background-color: var(--bg-gray);
  color: var(--text-secondary);
}

.nutrition-status-normal {
  background-color: #e8f5e9;
  color: #4caf50;
}

.nutrition-status-insufficient {
  background-color: #fff3e0;
  color: #ff9800;
}

.nutrition-status-excessive {
  background-color: #ffebee;
  color: #f44336;
}

.nutrition-progress {
  height: 16rpx;
  background-color: var(--bg-gray);
  border-radius: 8rpx;
  overflow: hidden;
}

.nutrition-progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #4caf50 0%, #8bc34a 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.nutrition-detail {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: var(--font-size-sm);
}

.nutrition-value {
  color: var(--text-primary);
  font-weight: 500;
}

.nutrition-target {
  color: var(--text-tertiary);
}

.nutrition-percentage {
  color: var(--text-secondary);
  margin-left: auto;
}
