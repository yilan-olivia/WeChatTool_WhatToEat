/* 健康报告页样式 */
.container {
  min-height: 100vh;
  padding: var(--spacing-md);
  background-color: var(--bg-color);
}

/* 时间选择器 */
.time-selector {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.date-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-label {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-xs);
}

.date-value {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.date-separator {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.query-btn {
  padding: var(--spacing-xs) var(--spacing-md);
  font-size: var(--font-size-sm);
  transition: all 0.3s ease;
}

.query-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 统计概览 */
.stats-overview {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.overview-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  background-color: var(--bg-gray);
  border-radius: var(--border-radius);
  transition: all 0.3s ease;
  animation: fadeInUp 0.5s ease;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-box:active {
  transform: scale(0.95);
  background-color: var(--primary-color);
}

.stat-box:active .stat-value,
.stat-box:active .stat-label {
  color: #ffffff;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
  transition: color 0.3s ease;
}

.stat-label {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  transition: color 0.3s ease;
}

/* 分类统计 */
.category-stats {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  margin-bottom: var(--spacing-md);
  color: var(--text-primary);
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.category-stat-item {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.category-name {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.category-count {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.category-bar {
  height: 8rpx;
  background-color: var(--bg-gray);
  border-radius: 4rpx;
  overflow: hidden;
}

.category-progress {
  height: 100%;
  background-color: var(--primary-color);
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 健康建议 */
.health-tips {
  background-color: var(--bg-white);
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-sm);
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  line-height: 1.6;
}
