/* 相机遮罩组件样式 */
.camera-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.overlay-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.overlay-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  background-color: var(--bg-white, #ffffff);
  border-radius: var(--border-radius, 8rpx);
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.overlay-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md, 24rpx);
  border-bottom: 1rpx solid var(--border-color, #ebedf0);
}

.overlay-title {
  font-size: var(--font-size-lg, 32rpx);
  font-weight: bold;
  color: var(--text-primary, #323233);
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: var(--bg-gray, #f2f3f5);
}

.close-btn:active {
  background-color: var(--border-color, #ebedf0);
}

.close-icon {
  font-size: var(--font-size-lg, 32rpx);
  color: var(--text-secondary, #646566);
  line-height: 1;
}

.overlay-body {
  flex: 1;
  padding: var(--spacing-md, 24rpx);
  overflow-y: auto;
}

.overlay-footer {
  padding: var(--spacing-md, 24rpx);
  border-top: 1rpx solid var(--border-color, #ebedf0);
}
