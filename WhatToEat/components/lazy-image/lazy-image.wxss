/* 图片懒加载组件样式 */
.lazy-image-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.lazy-image {
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.lazy-image.loaded {
  opacity: 1;
}

.lazy-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-gray, #f2f3f5);
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid var(--bg-gray, #f2f3f5);
  border-top: 3rpx solid var(--primary-color, #07c160);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.lazy-error {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-gray, #f2f3f5);
}

.error-text {
  font-size: var(--font-size-sm, 24rpx);
  color: var(--text-tertiary, #969799);
}
